extends layout

block content
  style
    include home.css
  if !user
    h1.pretty-heading
      center Social Flying
    hr
    h5
      center This is the coolest ever hackathon project and lets you fly with your friends. Yay!!!
  else
    h1 Friends
    p.lead Friends who are using the Social Flying app
    hr
    .table-responsive
    table.table.table-hover
      thead.thead-dark
        tr
          th.list_name 
          th.list_name Name
          th.list_name Phone
          th.list_name Email
      tbody
        each val in users
          tr
            td
              img(src=val.photo)
            td.list_name
              a(href='/#')
                p #{val.name}
            td.list_name
              a(href='/#')
                p #{val.phone}
            td.list_name
              a(href='/#')
                p #{val.email}   

